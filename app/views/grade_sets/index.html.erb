<p id="notice"><%= notice %></p>

<h1>Grade Sets</h1>

<table>
  <thead>
    <tr>
      <th>Ano</th>
      <th>Nota 01</th>
      <th>Nota 02</th>
      <th>Nota 03</th>
      <th>Nota 04</th>
      <th>Media</th>
      <th>Aluno</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @grade_sets.each do |grade_set| %>
      <tr>
        <td><%= grade_set.year %></td>
        <td><%= grade_set.grade1 %></td>
        <td><%= grade_set.grade2 %></td>
        <td><%= grade_set.grade3 %></td>
        <td><%= grade_set.grade4 %></td>
        <td><%= grade_set.avg %></td>
        <td><%= grade_set.student.name %></td>
        <td><%= link_to 'Show', grade_set %></td>
        <td><%= link_to 'Edit', edit_grade_set_path(grade_set) %></td>
        <td><%= link_to 'Destroy', grade_set, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

